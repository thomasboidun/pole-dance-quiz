{% extends 'base.html.twig' %}

{% block title %}Scoreboard{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/scoreboard.css")}}" /> {% endblock %}

{% block body %}

<section id="scoreboard" class="wrapper container-fluid">

  <figure class="background">
    <img src="{{ asset("img/ovelhapole_B.png")}}" alt="pole dance figure">
  </figure>

  <div class="container py-5 no-bar" style="max-width:720px;">
    <div class="d-flex justify-content-between">
      <h1>Scoreboard</h1>
      <a href="{{ path('home')}}" class="btn btn-link mb-3">Go home</a>
    </div>

    <table class="table">
      <thead>
        <tr class="table-dark">
          <th scope="col">Ranking</th>
          <th scope="col">Player</th>
          <th scope="col">Score</th>
        </tr>
      </thead>
      <tbody>
        {% for quiz in quizs %}
        <tr class="table-light">
          <th scope="row">{{ loop.index }}</th>
          <td>{{ quiz.getPlayer }}</td>
          <td>{{ quiz.getScore }}pt.</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</section>

{% endblock %}