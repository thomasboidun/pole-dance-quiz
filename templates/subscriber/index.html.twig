{% extends "base.html.twig" %}

{% block title %}Subscribe now!{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/subscribe.css")}}" /> {% endblock %}

{% block body %}
<section id="subscribe" class="container-fluid">

  <figure class="background">
    <img src="{{ asset("img/ovelhapole_B.png")}}" alt="pole dance figure">
  </figure>

  <div class="container" style="max-width:720px;">
    <h1>A pole dance quiz is coming soon!</h1>

    <p>
      To be notified of its release, send us your email address and confirm your subscription request. <br />
      See you soon!
    </p>

    {{ form_start(form) }}
      <div class="form-wrapper">
          {{ form_row(form.email) }}
          {{ form_row(form.send) }}
      </div>
    {{ form_end(form) }}
  </div>

</section>
{% endblock %}